<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Start Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="myMusic" android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp" android:id="@+id/start"/>
    <Button
            android:text="Stop Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop" android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/start"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp" android:onClick="myMusic"/>
    <Button
            android:text="Strat new Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startNew" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/start" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="132dp" android:layout_marginStart="132dp" android:onClick="myMusic"/>
</androidx.constraintlayout.widget.ConstraintLayout>