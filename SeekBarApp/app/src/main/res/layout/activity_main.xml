<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page"
        tools:context=".MainActivity">

    <SeekBar
            android:id="@+id/alpha"
            android:layout_width="411dp"
            android:layout_height="30dp"
            android:layout_marginTop="112dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
            android:layout_width="411dp"
            android:layout_height="32dp"
            android:id="@+id/colorRed" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/alpha"/>
    <SeekBar
            android:layout_width="413dp"
            android:layout_height="29dp" android:id="@+id/colorGreen" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.615" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/colorRed"/>
    <SeekBar
            android:layout_width="413dp"
            android:layout_height="35dp" android:id="@+id/colorBlue" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/colorGreen" app:layout_constraintHorizontal_bias="0.555"/>

</androidx.constraintlayout.widget.ConstraintLayout>